{
    "compilerOptions": {
        "module": "ES2015",
        "target": "es5",
        "lib": [
            "es5",
            "dom",
            "es2015.core",
            "es2015.promise"
        ],
        "strict": true,
        "noImplicitReturns": true,
        "noEmitOnError": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "sourceMap": true,
        "declaration": true,
        "declarationDir": "types",
        "moduleResolution": "Bundler"
    },
    "include": [
        "src/**/*"
    ]
}
